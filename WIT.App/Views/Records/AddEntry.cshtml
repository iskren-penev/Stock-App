@using WIT.Models.ViewModels.Warehouse
@model WIT.Models.ViewModels.Record.EntryAddViewModel
@{
    ViewBag.Title = "Add New Entry";
    IEnumerable<SelectListItem> seletItems = ViewBag.WarehouseList;
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("AddEntry", "Records", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Please fill in all fields.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.EntryType, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.EntryType,
                            new[]
                            {
                                new SelectListItem(){Text = "Input", Value = "Input"},
                                new SelectListItem(){Text = "Output", Value = "Output"}
                            }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.EntryType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.WhId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.WhId,
                            seletItems, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.EntryType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Cancel", "All", "Records", new { @class = "btn btn-default" })
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}