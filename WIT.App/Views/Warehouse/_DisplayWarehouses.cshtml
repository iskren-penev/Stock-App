@using WIT.Models.ViewModels.Warehouse
@model List<WarehouseListViewModel>
@{
    ViewBag.WarehouseId = null;
}
<table class="table table-bordered table-striped" style="table-layout: fixed">
    <tr >
        <th class="centered">
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th class="centered">
            @Html.DisplayNameFor(model => model.FirstOrDefault().Address)
        </th>
        <th class="centered"> 
            @Html.DisplayNameFor(model => model.FirstOrDefault().CurrentStock)
        </th>
        <th class="centered">
            @Html.DisplayNameFor(model => model.FirstOrDefault().Capacity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class="btn btn-default"})
            </td>
        </tr>
    }
</table>